nav(role="navigation", aria-lable="main navigation").navbar.is-light
  div.navbar-brand
    a(href="https://bulma.io").navbar-item
      img(src="https://bulma.io/images/bulma-logo.png" width="112" height="28")
  div
  div.navbar-menu
    div.navbar-start
      a(href="/").navbar-item Home
      a(href="https://github.com/Guardiadelcastro/passport-login").navbar-item Documentation
      if(user)
        a(href="/dashboard").navbar-item Dashboard
      a(href="https://github.com/Guardiadelcastro").navbar-item: i.fab.fa-github
    div.navbar-end
      div.navbar-item
        if(user)
          div.buttons
            a(href="/users/logout").button.is-danger Log Out
        else
          div.buttons
            a(href="/users/register").button.is-primary Register
            a(href="/users/login").button.is-light Log In