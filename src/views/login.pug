extends layout/main
block content
  .row.mt-5
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3 
          i.fas.fa-sign-in-alt Login
        include layout/messages
        form(action="/users/login" method="POST")
          .form-group
            label(for="email") Email
            input(type="email", name="email", placeholder="Enter email")#email.form-control
          .form-group
            label(for="password") Password
            input(type="password", name="password", placeholder="Enter password")#password.form-control
          div
            button(type="submit").btn.btn-primary.btn-block Login
        p.lead.mt-4 
          | No Account? 
          a(href="/users/register") Register